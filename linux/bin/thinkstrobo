#!/usr/bin/python
import os
import time

# To run without sudo,
# You need write permission for
# /sys/class/leds/tpacpi::thinklight/brightness
# It needs to be defined on each boot in /etc/rc.local

# TODO hide output

sleeptime = 0.03


def cycle_light(reps):
    i = 0
    while i < reps:
        os.system("echo 0 | sudo tee /sys/class/leds/tpacpi\:\:thinklight/brightness")
        time.sleep(sleeptime)
        os.system("echo 1 | sudo tee /sys/class/leds/tpacpi\:\:thinklight/brightness")
        time.sleep(sleeptime)
	i += 1

cycle_light(50)

os.system("echo 0 | sudo tee /sys/class/leds/tpacpi\:\:thinklight/brightness")
